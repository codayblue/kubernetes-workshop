docker_build("ghcr.io/codayblue/kubernetes-workshop/dashboard", "./dashboard")

k8s_yaml(helm("./helm", name="dashboard", namespace="dashboard", values="./helm/dashboard-values.yaml"))

docker_build("ghcr.io/codayblue/kubernetes-workshop/app", "./app")

k8s_yaml(helm("./helm", name="dev-app", namespace="dev"))
